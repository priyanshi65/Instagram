    <%# <script src="\assets\javascripts\user.js" charset="UTF-8"></script> %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<style>
.navbar-expand-lg{
      width:100%;
      margin-bottom: 20px;
      z-index:1;
}
.nav-link{
      margin-left:36px;
      margin-right:5px;
      padding-bottom:10px;
      text-shadow: 2px 2px pink;
}
.nav-links{
      margin-left:36px;
      margin-right:5px;
      font-size:40px;
      color:#ff617d;
   /* transform: rotate(20deg); */
}

.navbar-light .navbar-nav .nav-link{
      color: rgb(16 15 15);
}
  
.navbar-light .navbar-nav .nav-link:hover{
      color: black;
      border:1px solid white;
      background-color:white;
      border-radius:30px;
}

</style>
</head>

<body>

<nav class="navbar-expand-lg sticky-top  navbar-light bg-light">
  <div class="con"style="background-color: #f1f1f1;">
    <a class="navbar-brand" href="#"></a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
             <%= link_to "home", root_path, class: "nav-link fa fa-home",style:"font-size:20px" %>  
             <%# ROOT PATH %>    <%#  INDEX METHOD--POST CONTROLLER %>
        </li>
        <li class="nav-item">
             <%= link_to "user", users_path ,class: "nav-link fa fa-users",style:"font-size:20px" %>  
        </li>
             <%# USER///INDEX.HTML.ERB %>     <%# INDEX METHOD--USER CONTROLLER%>
        <%# <li class="nav-item"> %>
             <%#= link_to "Create", new_post_path, class: "nav-link fa fa-paperclip",style:"font-size:20px" %> 
             <%# POST///NEW.HTML.ERB %>     <%#  NEW  METHOD--POST CONTROLLER %>
        <%# </li> %>
        <li class="nav-item">
             <%= link_to "profile", user_path(current_user) ,class: "nav-link fa fa-user",style:"font-size:20px" %>  
        </li>
             <%# USER///SHOW.HTML.ERB %>     <%# SHOW METHOD--USER CONTROLLER%>
        <li class="nav-item">
             <%= button_to "logout", destroy_user_session_path, method: :delete, class: "nav-link btn btn-link fa fa-sign-out",style:"font-size:20px" %> 
             <%# DEVISE///SESSION///SIGN_OUT.HTML.ERB %>   <%# DESTROY METHOD--DEVISE--SESSION CONTROLLER%>
        </li>
        <li class="nav-item">
             <span class= "nav-links fa fa-instagram"></span>
        </li>
      </ul>
    </div>
  </div>
</nav>
       <%= yield  %>

</body>
</html>
