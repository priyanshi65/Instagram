<style>
.d-flex{
  margin-top:80px;
}
</style>
<%# <div class="vh-100"> %>
<div class="d-flex justify-content-center align-items-center">   <%# flex %>
    <div class="card" style="width: 29rem; height: 25rem;">                      <%#  card  %>
        <div class="card-body text-center">                                     <%#  card body %>
            <div class="instagram-logo-link">
              <%=image_tag("/assets/instagram-new-.jpg" ,style: "width: 200px")  %>
            </div> 
            <p class="text-center text-secondary">SignUp to connect with your friend</p>
            <hr>
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>


  <div class="actions">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>